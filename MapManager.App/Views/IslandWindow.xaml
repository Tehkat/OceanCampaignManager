<Window x:Class="MapManager.App.Views.IslandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Islands"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <!-- Background fills entire window -->
        <Image Source="pack://application:,,,/Assets/background_island.jpg"
               Stretch="Fill"/>

        <!-- Foreground content scales -->
        <Viewbox Stretch="Uniform">
            <StackPanel Margin="20">
                <TextBlock x:Name="CampaignTitle"
                           FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Margin="0,0,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <ListBox x:Name="IslandList" DisplayMemberPath="Name" Height="300"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add Island" Width="120" Height="50" Click="AddIsland_Click"/>
                    <Button Content="Upload/Update Map" Width="150" Height="50" Margin="10,0,0,0" Click="UploadOrUpdateMap_Click"/>
                    <Button Content="Preview Map" Width="120" Height="50" Margin="10,0,0,0" Click="PreviewMap_Click"/>
                    <Button Content="Delete Island" Width="120" Height="50" Margin="10,0,0,0" Click="DeleteIsland_Click"/>
                    <Button Content="Back to Campaigns" Width="150" Height="50" Margin="10,0,0,0" Click="BackToCampaigns_Click"/>
                    <Button Content="Log Out" Width="120" Height="50" Margin="10,0,0,0" Click="LogOut_Click"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
