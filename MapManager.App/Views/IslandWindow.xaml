<Window x:Class="MapManager.App.Views.IslandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Islands" Height="500" Width="800">
    <Grid>
        <!-- Background image -->
        <Image Source="Assets/background_island.jpg" Stretch="Fill" Opacity="0.3"/>

        <!-- Overlay content -->
        <StackPanel Margin="20">
            <TextBlock x:Name="CampaignTitle" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="IslandList" DisplayMemberPath="Name" Height="300"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Island" Width="100" Click="AddIsland_Click"/>
                <Button Content="Upload Map" Width="100" Margin="10,0,0,0" Click="UploadMap_Click"/>
                <Button Content="Update Map" Width="100" Margin="10,0,0,0" Click="UpdateMap_Click"/>
                <Button Content="Preview Map" Width="100" Margin="10,0,0,0" Click="PreviewMap_Click"/>
                <Button Content="Delete Island" Width="100" Margin="10,0,0,0" Click="DeleteIsland_Click"/>
                <Button Content="Back to Campaigns" Width="120" Margin="10,0,0,0" Click="BackToCampaigns_Click"/>
                <Button Content="Log Out" Width="100" Margin="10,0,0,0" Click="LogOut_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
