<Window x:Class="MapManager.App.Views.CampaignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Campaign" Height="500" Width="800">
    <Grid>
        <!-- Background -->
        <Image Source="../Assets/background_campaign.jpg" Stretch="Fill" Opacity="0.3"/>

        <!-- Overlay -->
        <StackPanel Margin="20">
            <TextBlock Text="Campaigns" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="CampaignList" DisplayMemberPath="Name" Height="350"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="New Campaign" Width="120" Click="NewCampaign_Click"/>
                <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="DeleteCampaign_Click"/>
                <Button Content="Open Campaign" Width="120" Margin="10,0,0,0" Click="OpenCampaign_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
