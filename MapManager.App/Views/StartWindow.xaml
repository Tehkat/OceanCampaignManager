<Window x:Class="MapManager.App.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ocean Campaign Manager"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Height="600" Width="1000">
    <Grid>
        <!-- Background fills entire window -->
        <Image Source="pack://application:,,,/Assets/background_start.jpg"
               Stretch="Fill"/>

        <!-- Foreground content scales -->
        <Viewbox Stretch="Uniform">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Ocean Campaign Manager"
                           FontSize="36" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI" Margin="0,0,0,20">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Main Start button -->
                <Button Content="Start" Width="200" Height="60" Click="Start_Click"/>

                <!-- Tiny Close button underneath -->
                <Button Content="Close" Width="60" Height="25" Margin="0,8,0,0" Click="Close_Click"/>
            </StackPanel>
        </Viewbox>

        <!-- Tiny "cat" text in bottom-right corner -->
        <TextBlock Text="Created by TehKat"
                   FontSize="10"
                   Foreground="White"
                   FontFamily="Segoe UI"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="5">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
