<Window x:Class="MapManager.App.Views.MapPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Preview" Height="600" Width="800">
    <Grid>
        <!-- Background (optional, you can add a parchment or dark overlay) -->
        <Image Source="../Assets/background_island.jpg" Stretch="Fill" Opacity="0.2"/>

        <!-- Map viewer -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="MapImage" Stretch="None"/>
        </ScrollViewer>
    </Grid>
</Window>
