<Window x:Class="MapManager.App.Views.MapPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Preview"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Height="600" Width="1000">
    <Grid>
        <!-- Background fills entire window -->
        <Image Source="pack://application:,,,/Assets/background_island.jpg"
               Stretch="Fill"/>

        <!-- Foreground content -->
        <StackPanel Margin="20">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="400">
                <Image x:Name="MapImage" Stretch="Uniform"/>
            </ScrollViewer>
            <Button Content="Close" Width="120" Height="40" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
