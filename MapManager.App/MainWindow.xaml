<Window x:Class="MapManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ocean Campaign Manager" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Campaign list -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Campaigns" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="CampaignList" DisplayMemberPath="Name" Height="350"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="New Campaign" Width="120" Click="NewCampaign_Click"/>
                <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="DeleteCampaign_Click"/>
                <Button Content="Open" Width="80" Margin="10,0,0,0" Click="OpenCampaign_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Islands -->
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="SelectedCampaignTitle" Text="No campaign selected" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="Islands" FontWeight="SemiBold" Margin="0,10,0,10"/>
            <ListBox x:Name="IslandList" DisplayMemberPath="Name" Height="280"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Island" Width="100" Click="AddIsland_Click"/>
                <Button Content="Upload Map" Width="100" Margin="10,0,0,0" Click="UploadMap_Click"/>
                <Button Content="Preview Map" Width="100" Margin="10,0,0,0" Click="PreviewMap_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
